                        android:textColor="#000"
                        android:textSize="13dp" />

                    <TextView
                        android:id="@+id/textViewPayment"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"
                        android:layout_weight="1"
                        android:fontFamily="@font/geomanist_regular"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="13dp" />

                </LinearLayout>

                <!--PROGRESS STATUS UNSEEN-->
                <TextView
                    android:id="@+id/textViewProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="50dp"
                    android:layout_weight="1"
                    android:fontFamily="@font/geomanist_regular"
                    android:gravity="center"
                    android:text=""
                    android:visibility="gone"
                    android:textColor="#000"
                    android:textSize="13dp" />

                <LinearLayout
                    android:id="@+id/progressunseen"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:visibility="gone"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/geomanist_regular"
                        android:text="Progress Status"
                        android:textColor="#000"
                        android:textSize="13dp" />



                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:layout_weight="1"
                        android:progress="0"/>



                </LinearLayout>

                <!--PROGRESS STATUS PENDING-->
                <LinearLayout
                    android:id="@+id/progresspending"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:visibility="gone"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/geomanist_regular"
                        android:text="Progress Status"
                        android:textColor="#000"
                        android:textSize="13dp" />


                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:progressTint="#E2901A"
                        android:layout_weight="1"
                        android:progress="50"/>



                </LinearLayout>

                <!--PROGRESS STATUS COMPLETED-->
                <LinearLayout
                    android:id="@+id/progresscompleted"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/geomanist_regular"
                        android:text="Progress Status"
                        android:textColor="#000"
                        android:textSize="13dp" />



                    <ProgressBar
                        style="@android:style/Widget.ProgressBar.Horizontal"
                        android:layout_width="wrap_content"
                        android:layout_height="12dp"
                        android:progressTint="@color/lightgreen"
                        android:layout_weight="1"
                        android:progress="100"/>



                </LinearLayout>


                <!--PROGRESS STATUS CANCELED-->
                <LinearLayout
                    android:id="@+id/progresscancelled"
                    android:layout_width="match_parent"
                    android:visibility="gone"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/geomanist_regular"
                        android:text="Progress Status"
                        android:textColor="#000"
                        android:textSize="13dp" />



                    <TextView
                       android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:layout_marginRight="25dp"
                        android:text="Cancelled"
                        android:textColor="@color/red"
                        android:fontFamily="@font/geomanist_regular"
                        android:textStyle="bold"
                        />



                </LinearLayout>



                <!--extre STATUS-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                    android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/geomanist_regular"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="13dp" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="50dp"

                        android:layout_weight="1"
                        android:fontFamily="@font/geomanist_regular"
                        android:gravity="center"
                        android:text=""
                        android:textColor="#000"
                        android:textSize="13dp" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="15dp"
                   android:layout_marginTop="15dp"
                    android:layout_marginRight="15dp"
                    android:orientation="horizontal">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        >
                        <ImageView
                            android:id="@+id/toInvoice"
                            android:layout_width="@dimen/_50dp"
                            android:layout_height="@dimen/_50dp"
                            android:layout_marginLeft="15dp"
                            android:layout_marginBottom="@dimen/_50dp"
                             android:src="@drawable/invoice_"
                            android:visibility="invisible" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="0"
                        android:orientation="horizontal"
                        >

                    <ImageView
                        android:id="@+id/toCancel"
                        android:layout_width="30dp"
                         android:layout_height="30dp"
                        android:layout_marginRight="15dp"
                        android:layout_marginBottom="@dimen/_50dp"
                         android:src="@drawable/canceltrans"
                        android:alpha="0.8"
                        android:visibility="visible" />
                    </LinearLayout>

                </LinearLayout>





                        android:text=""
                        android:textColor="#000"
                        android:textSize="13dp" />

                </LinearLayout>

                <!--PAYMENT STATUS-->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@android:color/white"
    app:cardCornerRadius="@dimen/spacing_xmedium"
    app:cardElevation="3dp"
    app:cardUseCompatPadding="true">

    <LinearLayout
        android:layout_width="280dp"
        android:layout_height="wrap_content"
        android:paddingBottom="20dp"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="220dp"
            android:scaleType="centerCrop"
            android:src="@drawable/no_results" />

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:textColor="@color/blessings"
            android:text="The Agent you entered does not exist!. Please cross-check "/>


        <Button
            android:id="@+id/btnCrossC"
            android:layout_width="wrap_content"
            android:layout_height="25.0dip"
            android:layout_gravity="center"
            android:layout_marginTop="0dp"
            android:background="@drawable/bg_btn_round_accept"
            android:fontFamily="@font/geomanist_regular"
            android:gravity="center"
            android:text="OK"
            android:textAllCaps="false"
            android:textColor="@color/white"
            android:textStyle="bold" />


    </LinearLayout>

</android.support.v7.widget.CardView>
